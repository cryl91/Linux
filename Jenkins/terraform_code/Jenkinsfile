pipeline {
    agent any //To run on different agent = agent { node { label 'agent1' } }
    options {
        ansiColor('xterm')
    }
    stages {
        stage('init') {
            steps {
                sh ''' 
                cd Jenkins/terraform_code
                ls -ltr
                echo "Pwd is the:"
                pwd
                terraform init
                '''
            } 
        }
        stage('Plan') {
            steps {
                sh'''
                cd Jenkins/terraform_code
                terraform plan
                '''
            }
        }
        stage('Approve') {
            steps {
                input "shall i apply"
            }
        }
        stage('Apply') {
            steps {
                sh 'echo "Applied"'
                sh'''
                cd Jenkins/terraform_code
                terraform plan
                '''
            }
        }

    }

        post {
            always {
                echo "I will run everytime"
            }

            success {
                echo "I will run only on success"
            }
            failure {
                echo "I will run only on failure"
            }
        }
    
} 