version: 0.2

env:
  parameter-store:
    para: dockercred
    user: "cryl91@gmail.com"
    pass: Cyril
phases:
  install:
    runtime-versions:
      python: 3.11
  pre_build:
    commands:
      - pip install -r ZPython/requirements.txt
  build:
    commands:
      - cd ZPython/
      - echo "Building Docker Image"
      - echo $pass | docker login -u $user --password-stdin
      - docker build -t "cryl91/$para:1" .
      - docker push <>  
  post_build:
    commands:
      - echo "Build is successful"
      # - echo "Hello World"